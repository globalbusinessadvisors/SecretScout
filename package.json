    "url": "https://github.com/globalbusinessadvisors/SecretScout/issues"
  },
  "keywords": [
    "secretscout",
    "secrets",
    "security",
    "github-actions",
    "rust",
    "secret-scanning",
    "secret-detection",
    "cli",
    "git",
    "gitleaks",
    "credential-scanner",
    "api-keys"
  ],
